<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" stylesheets="@menu.css" fx:controller="io.github.berinamajdancic.controllers.MenuController">
   <center>
      <VBox alignment="CENTER" spacing="15.0">
         <children>
            <Label text="login" styleClass="login-header" />
            <HBox alignment="CENTER" spacing="10.0">
               <children>
                  <Label text="USERNAME:" />
                  <TextField fx:id="usernameField" promptText="Enter your username" />
               </children>
            </HBox>
            <HBox alignment="CENTER" spacing="10.0">
               <children>
                  <Label text="PASSWORD:" />
                  <PasswordField fx:id="passwordField" promptText="Enter your password" />
               </children>
            </HBox>
         </children>
            <Button text="Login" onAction="#handleLogin" />
            <Button text="Cancel" onAction="#handleCancel" />
      </VBox>
   </center>
   <bottom>
      <Label styleClass="game-footer" text="Berina Majdancic" BorderPane.alignment="CENTER" />
     
   </bottom>
   <padding>
      <Insets top="20.0" right="20.0" bottom="20.0" left="20.0" />
   </padding>
</BorderPane>